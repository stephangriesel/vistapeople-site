---
export interface Props {
  post: any;
}

const { post } = Astro.props;
console.log("hero component", post.frontmatter);
---

<section
  id="home"
  class="relative overflow-hidden pt-20 md:pt-24 lg:pt-32 h-screen"
>
  <video
    autoplay
    loop
    muted
    poster="path/to/poster.jpg"
    class="absolute inset-0 -z-10 w-full h-full object-cover"
  >
    <source
      src="https://assets.mixkit.co/videos/preview/mixkit-set-of-plateaus-seen-from-the-heights-in-a-sunset-26070-large.mp4"
      type="video/mp4"
    /> Your browser does not support the video tag.
  </video>
  <div
    class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-white text-center"
  >
    <div class="-mx-4 flex flex-wrap items-center">
      <div class="w-full px-4">
        <div
          class="hero-content wow fadeInUp mx-auto max-w-[780px] text-center"
          data-wow-delay=".2s"
        >
          {
            post.frontmatter && post.frontmatter.title ? (
              <h1 class="mb-6 text-3xl font-bold leading-snug text-white sm:text-4xl sm:leading-snug lg:text-5xl lg:leading-[1.2]">
                {post.frontmatter.title}
              </h1>
            ) : null
          }
          {
            post.frontmatter && post.frontmatter.description ? (
              <p class="mx-auto mb-9 max-w-[600px] font-medium text-base text-white sm:text-lg sm:leading-[1.44]">
                {post.frontmatter.description}
              </p>
            ) : null
          }
          <ul class="mb-10 flex gap-5 flex-wrap items-center justify-center">
            {
              post.frontmatter &&
              post.frontmatter.ctaleftlink &&
              post.frontmatter.ctaleft ? (
                <li>
                  <a
                    href={post.frontmatter.ctaleftlink}
                    class="inline-flex items-center justify-center rounded-md bg-white py-[14px] px-7 text-center text-base font-medium text-dark shadow-1 transition duration-300 ease-in-out hover:text-body-color hover:bg-gray-2"
                  >
                    {post.frontmatter.ctaleft}
                  </a>
                </li>
              ) : null
            }
            {
              post.frontmatter &&
              post.frontmatter.ctarightlink &&
              post.frontmatter.ctaright ? (
                <li>
                  <a
                    href={post.frontmatter.ctarightlink}
                    target="_blank"
                    class="flex items-center gap-4 py-[14px] rounded-md bg-white/[0.12] px-6 text-base font-medium text-white transition duration-300 ease-in-out hover:bg-white hover:text-dark"
                  >
                    {post.frontmatter.ctaright}
                  </a>
                </li>
              ) : null
            }
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
