---
import Footer from "../components/layout/Footer.astro";
import Header from "../components/layout/Header.astro";
import BackToTop from "../components/layout/BackToTop.astro";

interface Props {
  description: string;
  title: string;
  image?: string;
}

const { description, title, image } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="twitter:image" content={image} />
    <title>{title}</title>
  </head>
  
  <body class="antialiased bg-white dark:bg-gray-900 text-gray-900 dark:text-white">
    <Header />
    
    <main>
      <slot />
    </main>
    
    <Footer />
    <BackToTop />
    
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>

    <style is:global>
      @import url("https://fonts.googleapis.com/css2?family=Fira+Sans:wght@300;400;700&family=Roboto:wght@400;700;900&display=swap");

      /* FIX 5: Scrollbar Stability
         Prevents the page from jumping 17px to the side on Windows 
         when navigating between long and short pages.
      */
      html {
        scrollbar-gutter: stable;
      }

      .fira-sans-text { font-family: "Fira Sans", sans-serif; font-weight: 400; }
      .fira-sans-300 { font-family: "Fira Sans", sans-serif; font-weight: 300; }
      .fira-sans-bold-700 { font-family: "Fira Sans", sans-serif; font-weight: 700; }

      .roboto-text { font-family: "Roboto", sans-serif; font-weight: 400; }
      .roboto-bold-700 { font-family: "Roboto", sans-serif; font-weight: 700; }
      .roboto-bold-900 { font-family: "Roboto", sans-serif; font-weight: 900; }

      /* NOTE: Ensure 'bg-dark' and 'text-primary' are defined in your 
         tailwind.config.cjs theme settings, otherwise these @apply rules will break. 
      */
      .sticky-header {
        @apply fixed z-[9999] bg-white/80 dark:bg-gray-900/80 transition;
        backdrop-filter: blur(5px);
        box-shadow: inset 0 -1px 0 0 rgba(0, 0, 0, 0.1);
      }

      .sticky-header .navbar-logo {
        @apply py-2;
      }

      .sticky-header #navbarToggler span {
        @apply bg-gray-900 dark:bg-white;
      }

      .sticky-header #navbarCollapse li > a {
        @apply text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-500 hover:opacity-100;
      }
      
      #navbarCollapse li .ud-menu-scroll.active {
        @apply opacity-70;
      }
      .sticky-header #navbarCollapse li .ud-menu-scroll.active {
        @apply text-blue-600 dark:text-blue-500 opacity-100;
      }

      .navbarTogglerActive > span:nth-child(1) {
        @apply top-[7px] rotate-45 transform;
      }
      .navbarTogglerActive > span:nth-child(2) {
        @apply opacity-0;
      }
      .navbarTogglerActive > span:nth-child(3) {
        @apply top-[-8px] rotate-[135deg];
      }

      /* Swiper/Carousel Fixes */
      .common-carousel .swiper-button-next:after,
      .common-carousel .swiper-button-prev:after {
        @apply hidden;
      }

      .common-carousel .swiper-button-next,
      .common-carousel .swiper-button-prev {
        @apply !static h-12 w-12 rounded-lg bg-white dark:bg-gray-800 shadow-lg text-gray-900 dark:text-white m-0 ease-out duration-200 hover:bg-blue-600 hover:text-white hover:shadow-none;
      }

      .common-carousel .swiper-button-next svg,
      .common-carousel .swiper-button-prev svg {
        @apply w-auto h-auto;
      }
    </style>
    
    <script>
      import "../scripts/stickymenu.js";
      import "../scripts/dropdown.js";
      import "../scripts/darkMode.js";
      import "../scripts/scrolltop.js";
      import "../scripts/scrollmenu.js";
      import "../scripts/testimonial.js";
    </script>
  </body>
</html>
